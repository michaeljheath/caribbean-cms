<p id="notice"><%= notice %></p>

<h1>Listing Accommodation Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accommodation_categories.each do |accommodation_category| %>
      <tr>
        <td><%= accommodation_category.name %></td>
        <td><%= link_to 'Show', accommodation_category %></td>
        <td><%= link_to 'Edit', edit_accommodation_category_path(accommodation_category) %></td>
        <td><%= link_to 'Destroy', accommodation_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

