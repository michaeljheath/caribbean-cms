<div>
  <p id="notice"><%= notice %></p>

  <div>
      <h1 style="margin-top: 0px;">Accommodations</h1>
  </div>

  <div>
    <%= link_to 'Create New Accommodation', new_accommodation_path, class: 'btn btn-info' %>
  </div>

  <hr>

  <div>
    <%=	form_tag 'search_by_id', method: :get do |f| %>
        <%=	 label_tag 'Search By ID:' %><br>
        <%= search_field(:@accommodation, :id) %>
        <%= submit_tag "search" %>
  <% end %>
  </div>

  <div>
    <%=	form_tag 'search_by_name', method: :get do %>
        <%=	 label_tag 'Search By Name:' %><br>
        <%= search_field(:@accommodation, :name) %>
        <%= submit_tag "search" %>
  <% end %>
  </div>

  <div>
    <%=	form_tag 'search_by_country', method: :get, id: "search_by_country" do %>
        <%=	 label_tag 'Search By Country:' %>

        <select class="form-control" id="select_country" name="country_id" style="width: inherit;">
          <option value="0">Select Country</option>
          <%= options_from_collection_for_select(Country.all, :country_id, :name) %>
        </select>
        <%= submit_tag "search" %>

  <% end %>

  </div>

  <hr>

  <div class="digg_pagination">
    <%= will_paginate @accommodation %>
  </div>

  <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Location</th>
      <th>Category</th>
      <th>Name</th>
      <th>Price</th>
      <th>Telephone</th>
      <th>Fax</th>
      <th style="width:200px;">Address</th>
      <th>Email</th>
      <th>Web address</th>
      <th>Details</th>
      <th>Has logo</th>
      <th>Show email</th>
      <th>Show web address</th>
      <th>Show listings</th>
      <th>Qualification level</th>
      <th>Modified at</th>
      <th>Admin contact</th>
      <th>Admin email</th>
      <th>Admin phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accommodations.each do |accommodation| %>
      <tr>
        <td><%=	 accommodation.id %></td>
        <% if (accommodation.location.nil?) %>
            <td>nil</td>
        <% else %>
            <td><%= accommodation.location.name %></td>
        <% end %>
        <% if (accommodation.accommodation_category.nil?) %>
            <td>nil</td>
        <% else %>
            <td><%= accommodation.accommodation_category.name %></td>
        <% end %>
        <td><%= accommodation.name %></td>
        <td><%= accommodation.price %></td>
        <td><%= accommodation.telephone %></td>
        <td><%= accommodation.fax %></td>
        <td><%= accommodation.address %></td>
        <td><%= accommodation.email %></td>
        <td><%= accommodation.web_address %></td>
        <td><%= accommodation.details %></td>
        <td><%= accommodation.has_logo %></td>
        <td><%= accommodation.show_email %></td>
        <td><%= accommodation.show_web_address %></td>
        <td><%= accommodation.show_listings %></td>
        <td><%= accommodation.qualification_level %></td>
        <td><%= accommodation.time_modified %></td>
        <td><%= accommodation.admin_contact %></td>
        <td><%= accommodation.admin_email %></td>
        <td><%= accommodation.admin_phone %></td>
        <td><%= accommodation.hotel_url %></td>
        <td><%= link_to 'Show', accommodation, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_accommodation_path(accommodation), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', accommodation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="digg_pagination">
  <%= will_paginate @accommodation %>
  </div>

</div>